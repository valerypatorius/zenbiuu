{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "$/*": [
        "../../*"
      ],
      "@/entities/*": [
        "./src/entities/*"
      ],
      "@/interfaces/*": [
        "./src/interfaces/*"
      ],
      "@/assets/*": [
        "./assets/*"
      ],
      "@/hub/*": [
        "./src/infrastructure/hub/*"
      ],
      "@/oauth/*": [
        "./src/infrastructure/oauth/*"
      ],
      "@/transport/*": [
        "./src/infrastructure/transport/*"
      ],
      "@/sockets/*": [
        "./src/infrastructure/sockets/*"
      ],
      "@/providers/*": [
        "./src/infrastructure/providers/*"
      ],
      "@/modules/*": [
        "./src/infrastructure/modules/*"
      ],
      "@/utils/*": [
        "./src/utils/*"
      ],
      "@/presentation/*": [
        "./src/presentation/*"
      ],
    },
    "lib": ["ESNext", "DOM", "DOM.Iterable", "WebWorker"]
  },
  "include": [
    "../../entities/**/*.ts",
    "../../interfaces/**/*.ts",
    "src/**/*.vue",
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}
