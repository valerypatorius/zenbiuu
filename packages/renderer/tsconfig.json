{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/types/*": [
        "../../types/*"
      ],
      "@/assets/*": [
        "./assets/*"
      ],
      "@/oauth/*": [
        "./src/infrastructure/oauth/*"
      ],
      "@/transport/*": [
        "./src/infrastructure/transport/*"
      ],
      "@/providers/*": [
        "./src/infrastructure/providers/*"
      ],
      "@/modules/*": [
        "./src/infrastructure/modules/*"
      ],
      "@/utils/*": [
        "./src/infrastructure/utils/*"
      ],
      "@/presentation/*": [
        "./src/presentation/*"
      ],
    },
    "lib": ["ESNext", "DOM", "DOM.Iterable", "WebWorker"]
  },
  "include": [
    "src/**/*.vue",
    "src/**/*.ts",
    "src/**/*.tsx",
    "../../types/**/*.ts"
  ]
}
