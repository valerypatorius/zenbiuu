{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/src/*": [
        "./src/*"
      ],
      "@/types/*": [
        "../../types/*"
      ],
      "@/store/*": [
        "../../store/*"
      ],
      "@/assets/*": [
        "./assets/*"
      ],
    },
    "lib": ["ESNext", "dom", "dom.iterable"]
  },
  "include": [
    "src/**/*.vue",
    "src/**/*.ts",
    "../../types/**/*.ts"
  ]
}
