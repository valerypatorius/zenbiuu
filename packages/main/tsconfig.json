{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["ESNext"],
    "paths": {
      "$/*": [
        "../../*"
      ],
      "@/interfaces/*": [
        "src/interfaces/*"
      ],
      "@/entities/*": [
        "src/entities/*"
      ],
      "@/modules/*": [
        "./src/modules/*"
      ],
      "@/utils/*": [
        "./src/utils/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
  ],
}
