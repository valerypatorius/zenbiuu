{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "esnext",
    "target": "esnext",
    "sourceMap": true,
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "strict": true,
    "isolatedModules": true,
    "types": [
      "vite/client",
      "node"
    ],
    "lib": ["ESNext"],
    "esModuleInterop": true,
    "paths": {
      "@zenbiuu/*": ["packages/*/src"]
    }
  },
  "include": [
    "packages/**/src",
    "scripts",
    "packages/**/vite.config.ts"
  ]
}
