{
  "name": "zenbiuu",
  "license": "GPL-3.0",
  "version": "2.0.0",
  "productName": "Zenbiuu",
  "description": "Desktop app for comfortable streams watching",
  "author": "valerypatorius",
  "main": "packages/main/dist/index.cjs",
  "scripts": {
    "typecheck:preload": "tsc -p packages/preload --noEmit",
    "typecheck:main": "tsc -p packages/main --noEmit",
    "typecheck:renderer": "vue-tsc -p packages/renderer --noEmit",
    "typecheck": "npm run typecheck:main && npm run typecheck:preload && npm run typecheck:renderer",
    "icons": "electron-icon-builder --input=icon.png --output=build --flatten",
    "compile:debug": "electron-builder build --config electron-builder.config.js --dir --config.asar=false",
    "compile:release:preview": "electron-builder build --config electron-builder.config.js --win --publish=never",
    "compile:release:win": "electron-builder build --config electron-builder.config.js --win --publish=always",
    "compile:release:mac": "electron-builder build --config electron-builder.config.js --mac --publish=always",
    "script:build": "node scripts/build.js",
    "script:dev": "node scripts/dev.js",
    "build": "cross-env MODE=production npm run script:build",
    "lint": "eslint ./ --ext .ts,.js,.vue --fix",
    "dev": "npm run script:dev",
    "release:preview": "npm run build && npm run compile:release:preview",
    "release:win": "npm run lint && npm run typecheck && npm run build && npm run compile:release:win",
    "release:mac": "npm run lint && npm run typecheck && npm run build && npm run compile:release:mac"
  },
  "dependencies": {
    "@vueuse/core": "^10.7.1",
    "hls.js": "^1.4.14",
    "linkify-html": "^4.1.3",
    "linkifyjs": "^4.1.3",
    "localforage": "^1.10.0",
    "marked": "^11.1.1",
    "vue": "^3.4.5",
    "vue-i18n": "^9.8.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "@vitejs/plugin-vue": "^5.0.2",
    "@vitejs/plugin-vue-jsx": "^3.1.0",
    "cross-env": "^7.0.3",
    "electron": "^28.1.1",
    "electron-builder": "^24.9.1",
    "electron-icon-builder": "^2.0.1",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.7",
    "eslint": "^8.56.0",
    "eslint-config-standard-with-typescript": "^43.0.0",
    "eslint-plugin-boundaries": "^4.0.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-vue": "^9.19.2",
    "postcss": "^8.4.32",
    "postcss-extend-rule": "^4.0.0",
    "postcss-nested": "^6.0.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vue-eslint-parser": "^9.3.2",
    "vue-tsc": "^1.8.27"
  }
}
