{
  "name": "zenbiuu",
  "license": "GPL-3.0",
  "version": "1.0.2",
  "productName": "Zenbiuu",
  "description": "Desktop app for comfortable streams watching",
  "author": "valerypatorius",
  "main": "packages/main/dist/index.cjs",
  "scripts": {
    "typecheck:hub": "tsc -p packages/hub --noEmit",
    "typecheck:main": "tsc -p packages/main --noEmit",
    "typecheck:renderer": "vue-tsc -p packages/renderer --noEmit",
    "typecheck": "yarn typecheck:main && yarn typecheck:hub && yarn typecheck:renderer",
    "icons": "electron-icon-builder --input=icon.png --output=build --flatten",
    "compile:debug": "electron-builder build --config electron-builder.config.js --dir --config.asar=false",
    "compile:release:preview": "electron-builder build --config electron-builder.config.js --win --publish=never",
    "compile:release:win": "electron-builder build --config electron-builder.config.js --win --publish=always",
    "compile:release:mac": "electron-builder build --config electron-builder.config.js --mac --publish=always",
    "script:build": "node scripts/build.js",
    "script:dev": "node scripts/dev.js",
    "build": "cross-env MODE=production yarn script:build",
    "lint": "eslint ./ --ext .ts,.js,.vue --fix",
    "dev": "yarn script:dev",
    "release:preview": "yarn build && yarn compile:release:preview",
    "release:win": "yarn lint && yarn typecheck && yarn build && yarn compile:release:win",
    "release:mac": "yarn lint && yarn typecheck && yarn build && yarn compile:release:mac"
  },
  "dependencies": {
    "color": "^4.2.3",
    "hls.js": "^1.1.5",
    "linkifyjs": "^3.0.5",
    "marked": "^4.0.15",
    "vue": "^3.2.33",
    "vue-i18n": "^9.1.10",
    "vue-router": "^4.0.15",
    "vuex": "^4.0.2"
  },
  "devDependencies": {
    "@types/color": "^3.0.2",
    "@types/linkifyjs": "^2.1.4",
    "@types/marked": "^4.0.3",
    "@typescript-eslint/eslint-plugin": "^4.29.0",
    "@typescript-eslint/parser": "^4.29.0",
    "@vitejs/plugin-vue": "^2.3.2",
    "cross-env": "^7.0.3",
    "electron": "^18.2.0",
    "electron-builder": "^23.0.9",
    "electron-icon-builder": "^2.0.1",
    "electron-store": "^8.0.1",
    "electron-updater": "^5.0.1",
    "eslint": "^7.32.0",
    "eslint-config-standard-with-typescript": "^20.0.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-vue": "^7.0.0-beta.4",
    "typescript": "^4.6.4",
    "vite": "^2.9.8",
    "vue-tsc": "^0.34.12"
  }
}
